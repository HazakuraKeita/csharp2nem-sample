<Window x:Class="Csharp2Nem.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Csharp2Nem.Sample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="{Binding Wallet.Balance, StringFormat={}{0} XEM}" FontSize="32" HorizontalAlignment="Center"/>
            <Button Command="{Binding StartCommand}" Content="Start" Height="50" Width="200"/>
        </StackPanel>
    </Grid>
</Window>
